
[VPS]
# Example: First time running against host, with default root login key
# bbvps.blackfell.net ansible_ssh_private_key_file=/home/hullet/Documents/Projects/wu-tang-lan/linode_admin@blackfell.net ansible_user=root

# Example: Second run onwards against host, with ansible_user login key
# bbvps.blackfell.net ansible_ssh_private_key_file=/home/hullet/Documents/Projects/wu-tang-lan/linode_ansible@blackfell.net ansible_user=ansible ssh_args="-p 34522"


# Example: Second run onwards as ansible user, using ssh connection file in ansible.cfg below
bbvps.ansible  ansible_user=ansible

[ssh_connection]
ssh_args="-F ~/.ssh/config"
